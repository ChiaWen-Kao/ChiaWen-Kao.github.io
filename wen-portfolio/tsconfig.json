{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src", // 02092025 Add
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "components/*"
      ], // 02092025 Add
      "@styles/*": [
        "styles/*"
      ], // 02092025 Add
      "@data/*": [
        "data/*"
      ], // 02092025 Add
      "@lib/*": [
        "lib/*"
      ] // 02092025 Add
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
